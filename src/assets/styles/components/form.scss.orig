@use 'sass:math';

// FORM INPUT STYLES
input:not([type="radio"]):not([type="checkbox"]),
select {
  height: 42px;
}

label {
  white-space: pre;
  color: var(--main-color);
  display: block;
  font-size: 0.875rem;
  padding-bottom: 0.938rem;
  padding-left: 3px;
  letter-spacing: -1px;
}

select {
  padding: 0.5rem 1rem;
  appearance: none;

  option {
    color: $black;

    &:disabled {
      background: $smoke;
    }
  }

  &:active {
    border-color: $blue;
  }
}

input,
textarea,
select {
  font-family: 'Styrene A Web', sans-serif;
  font-size: 1rem;
  font-weight: 300;
  display: block;
  color: var(--main-color);
  background-color: transparent;
  border: 1px solid;
  border-color: var(--border-color);
  padding: 0.5rem 1rem;
  border-radius: 25px;
  width: 100%;

  &::placeholder {
    font-weight: 200;
    filter: brightness(1.4);
  }
}

select {
  padding-right: 2.5rem;
}

input[type='number']::-webkit-inner-spin-button,
input[type='number']::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

input[type='number'] {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: 111px;
  -moz-appearance:textfield;
}


.select__component {
  position: relative;

  .arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 1rem;
    color: var(--main-color);
    background-repeat: no-repeat;
    background-size: contain;
    pointer-events: none;
  }
}

// FORM STYLES
