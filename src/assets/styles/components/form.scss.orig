    display: flex;
    flex-direction: column;
    color: var(--main-color);

    label {
      display: flex;
      column-gap: 8px;
    }

    &__groups {
      display: flex;
      flex-direction: column;

      @include respond-to('desktop') {
        flex-direction: row;
        column-gap: 20px;
        flex-wrap: wrap;
        & > div {
          flex: 0 1 calc(50% - 10px);
        }
      }
    }

    &__fees {
      display: flex;
      flex-direction: column;
      width: 100%;

      &__fee {
        padding: 1rem 0;
        width: 100%;
        max-width: 544px;
        margin-bottom: 1rem;
        border-top: 1px solid $grey;

        &-fixed {
          display: flex;
          column-gap: $columnGap;
        }

        &-container {
          display: flex;
          width: 100%;
          column-gap: $columnGap;
        }
      }

